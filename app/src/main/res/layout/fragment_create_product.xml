<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:padding="12dp"
                android:background="@color/primaryDark"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:id="@+id/title"
                android:text="Create Product"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/primaryDark"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp"
                    android:background="@drawable/round_border"
                    android:elevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Id"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/id"
                        android:textSize="20sp"
                        android:inputType="none"
                        android:hint="P01976"
                        android:focusable="false"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Name"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/name"
                        android:textSize="20sp"
                        android:inputType="textCapWords"
                        android:hint="Paracetamol"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Group"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:id="@+id/group"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="PTR Rate"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/ptrRate"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:hint="15.00"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>


                    <TextView
                        android:text="MRP"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/price"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:hint="12.5"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="HSN Code"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/hsnCode"
                        android:textSize="20sp"
                        android:hint="hsn code"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="GST"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/taxRate"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:hint="20.00"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="In stock"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/stock"
                        android:textSize="20sp"
                        android:inputType="numberSigned"
                        android:hint="20.00"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Scheme"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="30dp"
                        android:layout_height="40dp">

                        <EditText
                            android:id="@+id/base"
                            android:inputType="numberSigned"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:hint="Base"
                            android:textColor="@color/black"
                            android:paddingHorizontal="5dp"
                            android:background="@drawable/textview_border"
                            android:layout_marginRight="1dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/free"/>

                        <EditText
                            android:id="@+id/free"
                            android:inputType="numberSigned"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:hint="Free"
                            android:textColor="@color/black"
                            android:paddingHorizontal="5dp"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/textview_border"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/base"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:text="Discount(in %)"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/discount"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:hint="20.00"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/createProduct"
                            android:text="Save Product"
                            android:textSize="20sp"
                            android:minHeight="40dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/button_border"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ProgressBar
                            android:id="@+id/loading"
                            android:visibility="invisible"
                            android:padding="5dp"
                            android:elevation="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            style="?android:attr/progressBarStyleLarge"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>