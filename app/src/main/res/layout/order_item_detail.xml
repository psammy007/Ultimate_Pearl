<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Element name"
                android:paddingHorizontal="5dp"
                android:textColor="@color/primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/itemTotal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/itemTotal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="\u20B9 100"
                android:textSize="18sp"
                android:gravity="end"
                android:paddingHorizontal="5dp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toRightOf="@id/name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sunInfo"
                android:text="Quantity"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/itemCount"
                android:text="10"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/freeTitle"
                android:text="Free"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/freeItemCount"
                android:text="10"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/productCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:text="Code"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/code"
                android:text="10"
                android:textColor="#5E5C5C"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#D6D1D1"/>

    </LinearLayout>

</layout>