<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateMasterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:padding="12dp"
                android:background="@color/primaryDark"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:id="@+id/title"
                android:text="Create Customer"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/primaryDark"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:padding="20dp"
                    android:background="@drawable/round_border"
                    android:elevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Id"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/id"
                        android:textSize="20sp"
                        android:inputType="none"
                        android:hint="C01976"
                        android:focusable="false"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Name"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/name"
                        android:textSize="20sp"
                        android:inputType="textCapWords"
                        android:hint="Tony Stark"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Contact"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/contact"
                        android:textSize="20sp"
                        android:inputType="numberSigned"
                        android:hint="8828353569"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Email"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/email"
                        android:textSize="20sp"
                        android:inputType="textEmailAddress"
                        android:hint="jainbg1@gmail.com "
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Area"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:id="@+id/area"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Address"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/addressLine"
                        android:textSize="20sp"
                        android:inputType="textCapSentences"
                        android:hint="Shedbal"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="City"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/city"
                        android:textSize="20sp"
                        android:inputType="textCapSentences"
                        android:hint="Sangli"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="GST Type"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/gstType"
                        android:textSize="20sp"
                        android:inputType="text"
                        android:hint="G.S.T."
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="GST Number"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/gstNumber"
                        android:textSize="20sp"
                        android:inputType="text"
                        android:hint="19767031999"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Drug Lic No"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/drugLicNo"
                        android:textSize="20sp"
                        android:inputType="textCapCharacters"
                        android:hint="20MH-Z01-123456"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="FSSAI Number"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/fssaiNo"
                        android:textSize="20sp"
                        android:inputType="numberSigned"
                        android:hint="1234567890123456"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Cash Discount(%)"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/cashDiscount"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:hint="10"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Opening Balance"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/unpaidBill"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:hint="2777"
                        android:text="0"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <TextView
                        android:text="Credit days"
                        android:textColor="@color/primaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/creditDays"
                        android:textSize="20sp"
                        android:inputType="numberSigned"
                        android:hint="2777"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/createMaster"
                            android:text="Save Customer"
                            android:textSize="20sp"
                            android:minHeight="40dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/button_border"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ProgressBar
                            android:id="@+id/loading"
                            android:visibility="invisible"
                            android:padding="5dp"
                            android:elevation="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            style="?android:attr/progressBarStyleLarge"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>